package com.personal.rents.activities.helpers;

import com.personal.rents.R;

import android.app.Activity;
import android.content.Context;
import android.graphics.Bitmap;
import android.graphics.Canvas;
import android.util.DisplayMetrics;
import android.view.View;
import android.view.ViewGroup.LayoutParams;
import android.widget.TextView;

public class RentMarkerBuilder {
	
	public static Bitmap createRentMarkerIcon(Context context, View rentMarkerView, int rentPrice) {
		TextView priceText = (TextView) rentMarkerView.findViewById(R.id.rent_marker_price);
		priceText.setText(String.valueOf(rentPrice));

		// create image from view.
		DisplayMetrics displayMetrics = new DisplayMetrics();
		((Activity) context).getWindowManager().getDefaultDisplay().getMetrics(displayMetrics);
		rentMarkerView.setLayoutParams(new LayoutParams(LayoutParams.WRAP_CONTENT, 
				LayoutParams.WRAP_CONTENT));
		rentMarkerView.measure(displayMetrics.widthPixels, displayMetrics.heightPixels);
		rentMarkerView.layout(0, 0, displayMetrics.widthPixels, displayMetrics.heightPixels);
		rentMarkerView.buildDrawingCache();
	
		Bitmap bitmap = Bitmap.createBitmap(rentMarkerView.getMeasuredWidth(), 
				rentMarkerView.getMeasuredHeight(), Bitmap.Config.ARGB_8888);
		Canvas canvas = new Canvas(bitmap);
		rentMarkerView.draw(canvas);
		
		return bitmap;
	}
	
	private static Bitmap createDrawableFromView(Context context, View view) {
		DisplayMetrics displayMetrics = new DisplayMetrics();
		((Activity) context).getWindowManager().getDefaultDisplay().getMetrics(displayMetrics);
	
		view.setLayoutParams(new LayoutParams(LayoutParams.WRAP_CONTENT, LayoutParams.WRAP_CONTENT));
		view.measure(displayMetrics.widthPixels, displayMetrics.heightPixels);
		view.layout(0, 0, displayMetrics.widthPixels, displayMetrics.heightPixels);
		view.buildDrawingCache();
	
		Bitmap bitmap = Bitmap.createBitmap(view.getMeasuredWidth(), view.getMeasuredHeight(), Bitmap.Config.ARGB_8888);
		Canvas canvas = new Canvas(bitmap);
		view.draw(canvas);
		 
		return bitmap;
	}
}
